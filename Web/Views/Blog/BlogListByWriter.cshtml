@model System.Collections.Generic.List<Entity.Concrete.Blog>

@{
    ViewBag.Title = "Writers Blog";
    Layout = "/Views/Writer/WriterLayout.cshtml";
}

<h1>Writers Blog</h1>
<div class="col-lg-12 grid-margin stretch-card">
  <div class="card">
    <div class="card-body">
      <h4 class="card-title">Writers Blog Table</h4>
      <table class="table table-striped">
        <thead>
        <tr>
          <th> Author </th>
          <th> Title </th>
          <th> Category </th>
          <th> Status </th>
          <th> Published Date </th>
          <th> Actions </th>
        </tr>
        </thead>
        <tbody>
        @foreach (var blog in Model)
        {
          <tr>
            <td class="py-1">
              <img src="~/BlogTema/writerTemplate/assets/images/faces-clipart/pic-1.png" alt="image"/>
            </td>
            <td> @blog.Title </td>
            <td> @blog.Category.Name</td>
            <td style="color: @(blog.Status ? "green" : "red");">
                                            @if (blog.Status)
                                            {
                                                @Html.Raw("Active")
                                            }
                                            else
                                            {
                                                @Html.Raw("Inactive")
                                            }
                                        </td>
            <td> @blog.CreatedAt.ToString("dd/MM/yyyy") </td>
            <td>
              <a href="#" class="btn btn-warning btn-sm">
                <i class="fas fa-edit"></i> Edit
              </a>
              <a href="#" class="btn btn-danger btn-sm">
                <i class="fas fa-trash"></i> Delete
              </a>
            </td>
          </tr>
        }
        </tbody>
      </table>
    </div>
  </div>
</div>
<a href="#" class="btn btn-primary">
  <i class="fas fa-plus"></i> Add New Blog
</a>