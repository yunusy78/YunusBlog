@model Entity.Concrete.Blog
@{
    ViewBag.Title = "Add New Blog";
    Layout = "/Views/Writer/WriterLayout.cshtml";
}

<h1>Add New Blog</h1>
<div class="container">
    <form asp-controller="Blog" asp-action="AddToBlog" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label for="title">Title:</label>
            <input type="text" id="title" name="Title" class="form-control" required maxlength="100">
            <span asp-validation-for="Title" class="text-danger"></span>  
        </div>

        <div class="form-group">
            <label for="content">Content:</label>
            <textarea id="content" name="Content" class="form-control" rows="8" required></textarea>
            <span asp-validation-for="Content" class="text-danger"></span>  
        </div>
         <div class="form-group">
                          <label asp-for="ImageUrl" >Choose an Image</label>
                          <div class="custom-file">
                              <input type="file" id="uploadBox" name="file" class="custom-file-input" >
                                <label class="custom-file-label" for="uploadBox">Select Image</label>
                          </div>
                          <span asp-validation-for="ImageUrl" class="text-danger"></span>
                      </div>
         <div class="form-group">
                    <label for="categoryId">Category:</label>
                    @Html.DropDownListFor(x=>x.CategoryId, (List<SelectListItem>)ViewBag.Categories2, new { @class = "form-control" })
                    
                                </div>
        
        <button type="submit" class="btn btn-primary">Add Blog</button>
    </form>
</div>

