@model dynamic

@{
    ViewBag.Title = "Index";
    Layout = "/Views/Writer/WriterLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">

        <body>
          
            
            <div class="page-header">
              <h3 class="page-title">
                <span class="page-title-icon bg-gradient-primary text-white mr-2">
                  <i class="mdi mdi-home"></i>
                </span> Dashboard
              </h3>
            </div>
        <div class="row">
          <div class="col-md-4 stretch-card grid-margin">
            <div class="card bg-gradient-danger card-img-holder text-white">
              <div class="card-body">
                <img src="~/BlogTema/writerTemplate/assets/images/dashboard/circle.svg" class="card-img-absolute" alt="circle-image" />
                <h4 class="font-weight-normal mb-3">The total number of blogs<i class="mdi mdi-chart-line mdi-24px float-right"></i>
                </h4>
                <h2 class="mb-5">@ViewBag.BlogCount</h2>
                <h6 class="card-text">YunusBlog</h6>
              </div>
            </div>
          </div>
          <div class="col-md-4 stretch-card grid-margin">
            <div class="card bg-gradient-info card-img-holder text-white">
              <div class="card-body">
                <img src="~/BlogTema/writerTemplate/assets/images/dashboard/circle.svg" class="card-img-absolute" alt="circle-image" />
                <h4 class="font-weight-normal mb-3">The total number of your blogs <i class="mdi mdi-bookmark-outline mdi-24px float-right"></i>
                </h4>
                <h2 class="mb-5">@ViewBag.BlogWriterCount</h2>
                <h6 class="card-text">YunusBlog</h6>
              </div>
            </div>
          </div>
          <div class="col-md-4 stretch-card grid-margin">
            <div class="card bg-gradient-success card-img-holder text-white">
              <div class="card-body">
                <img src="~/BlogTema/writerTemplate/assets/images/dashboard/circle.svg" class="card-img-absolute" alt="circle-image" />
                <h4 class="font-weight-normal mb-3">The total number of Category <i class="mdi mdi-diamond mdi-24px float-right"></i>
                </h4>
                <h2 class="mb-5">@ViewBag.CategoryCount</h2>
                <h6 class="card-text">YunusBlog</h6>
              </div>
            </div>
          </div>
        </div>
        @await Component.InvokeAsync("BlogListDashboard")

        @await Component.InvokeAsync("WriterAboutDashboard")
        @await Component.InvokeAsync("CategoryListDashboard")
       
        </body>
        
</html>
