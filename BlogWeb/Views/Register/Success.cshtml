@model dynamic

@{
    ViewBag.Title = "Success";
    Layout = "_Layout";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Yazarlar İçin Karşılama Sayfası</title>
    <style>
     body {
         font-family: Arial, sans-serif;
         background-color: #f2f2f2;
         margin: 0;
         padding: 0;
     }
 
     .headerWriter {
         background-color: #4CAF50; /* Açık yeşil tonu */
         color: #fff;
         padding: 20px;
         text-align: center;
     }
 
     .container {
         max-width: 800px;
         margin: 20px auto;
         padding: 20px;
         background-color: #fff;
         border-radius: 5px;
         box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
     }
 
     h1 {
         margin-top: 0;
         margin-bottom: 20px;
     }
 
     p {
         margin-bottom: 20px;
         line-height: 1.6;
     }
 
     .cta-button {
         display: inline-block;
         padding: 10px 20px;
         background-color: #4CAF50; /* Açık yeşil tonu */
         color: #fff;
         text-decoration: none;
         border-radius: 5px;
     }
 
     .cta-button:hover {
         background-color: #45A049; /* Hafif gölgeli yeşil tonu */
     }
 </style>

</head>
<body>
<div class="headerWriter">
    <h1 class="h1">Registration Successful</h1>
</div>
<div class="container">
    <p class="cs2">Thank you for registering as a Writer. Your registration has been received and will be processed shortly.</p>
    <p class="cs2">You will receive a response as soon as possible.</p>
    <p class="cs2"><a class="cs3" href="/">Go back to the homepage</a></p>
</div>
</body>
</html>
