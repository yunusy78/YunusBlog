@model dynamic

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Welcome Page for Writers</title>
 <style>
     body {
         font-family: Arial, sans-serif;
         background-color: #f2f2f2;
         margin: 0;
         padding: 0;
     }
 
     .headerWriter {
         background-color: #4CAF50; /* Light Green Shade */
         color: #fff;
         padding: 20px;
         text-align: center;
     }
 
     .container {
         max-width: 800px;
         margin: 20px auto;
         padding: 20px;
         background-color: #fff;
         border-radius: 5px;
         box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
     }
 
     h1 {
         margin-top: 0;
         margin-bottom: 20px;
     }
 
     p {
         margin-bottom: 20px;
         line-height: 1.6;
     }
 
     .cta-button {
         display: inline-block;
         padding: 10px 20px;
         background-color: #4CAF50; /* Light Green Shade */
         color: #fff;
         text-decoration: none;
         border-radius: 5px;
     }
 
     .cta-button:hover {
         background-color: #45A049; /* Slightly Shaded Green */
     }
 </style>

</head>
<body>
  <div class="headerWriter">
    <h1>Welcome, Writers!</h1>
  </div>

  <div class="container">
    <p>You are the creative writers who turn thoughts into a magical dance of words on paper. We know that together, we will achieve amazing things on this platform!</p>
    <p>Unleash your imagination, create worlds, and capture hearts with compelling stories. We're excited to support you on your journey of writing.</p>
    <p>To join us, click the button below and start sharing your writings with the world!</p>
    <a class="cta-button" href="/Register/Index">Get Started Now</a>
  </div>
</body>
</html>
