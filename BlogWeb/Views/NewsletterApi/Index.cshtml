@model System.Collections.Generic.List<Entity.Concrete.Newsletter>?

@{
    ViewBag.Title = "title";
    Layout = "_UserLayout";
}

<h1>Blog</h1>
<div class="col-lg-12 grid-margin stretch-card">
  <div class="card">
    <div class="card-body">
      <table class="table table-striped">
        <thead>
        <tr>
          <th> Author </th>
          <th> Id </th>
          <th> Email </th>
          <th> Status </th>
          <th> Date </th>
          <th> Actions </th>
        </tr>
        </thead>
        <tbody>
        @foreach (var newsletter in Model)
        {
          <tr>
            <td class="py-1">
              <img src="~/BlogTema/writerTemplate/assets/images/faces-clipart/pic-1.png" alt="image"/>
            </td>
            <td> @newsletter.Id </td>
            <td> @newsletter.Email</td>
            <td style="color: @(newsletter.Status ? "green" : "red");">
                                            @if (newsletter.Status)
                                            {
                                                @Html.Raw("Active")
                                            }
                                            else
                                            {
                                                @Html.Raw("Inactive")
                                            }
                                        </td>
            <td> @newsletter.CreatedAt.ToString("dd/MM/yyyy") </td>
            <td>
              <a href="/NewsletterApi/EditNewsletter/@newsletter.Id" class="btn btn-warning btn-sm">
                <i class="fas fa-edit"></i> Edit
              </a>
              <a href="/NewsletterApi/DeleteNewsletter/@newsletter.Id" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this item?')">
                <i class="fas fa-trash"></i> Delete
              </a>
            </td>
          </tr>
        }
        </tbody>
      </table>
    </div>
  </div>
</div>
<a href="/NewsletterApi/AddNewsletter" class="btn btn-primary">
  <i class="fas fa-plus"></i> Add New Newsletter
</a>
