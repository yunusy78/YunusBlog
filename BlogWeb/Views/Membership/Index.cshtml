@model PaymentViewModel
@using Microsoft.Extensions.Options
@using Entity.Service
@inject IOptions<StripeService> Stripe
@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Checkout Page</title>
    <style>
  body {
    font-family: Arial, sans-serif;
    background-color: #f4f4f4;
    margin: 0;
    padding: 0;
  }

  .container {
    max-width: 500px;
    margin: 0 auto;
    padding: 20px;
    background-color: #fff;
    border-radius: 5px;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
  }

  label {
    font-weight: bold;
  }

  input[type="text"],
  input[type="email"],
  select {
    width: 100%;
    padding: 10px;
    margin-bottom: 10px;
    border: 1px solid #ccc;
    border-radius: 4px;
  }

  button {
    display: block;
    width: 100%;
    padding: 10px;
    background-color: #007bff;
    color: #fff;
    border: none;
    border-radius: 4px;
    cursor: pointer;
  }

  button:hover {
    background-color: #0056b3;
  }
</style>
</head>
<body>

<div class="container">
    <h3>Membership Payment</h3>
    <div class="price-info">
        <ul>
            <li>Monthly Subscription: 100 NOK</li>
            <li>Yearly Subscription: 1000 NOK</li>
        </ul>
    </div>
   <br/>
   <form asp-action="CheckoutPOST" asp-controller="Membership" method="post">
       <div>
           <label for="FirstName">FirstName</label>
           <input type="text" asp-for="FirstName" value="@ViewBag.User.FirstName" required>
       </div>
       <div>
           <label for="LastName">LastName</label>
           <input type="text" asp-for="LastName" value="@ViewBag.User.LastName" required>
       </div>
        
       <div>
           <label for="Email">Email</label>
           <input type="email" asp-for="Email" value="@ViewBag.User.Email" required>
       </div>
       <div class="form-group">
                  <label for="membershipId">Subscription Type:</label>
                  @Html.DropDownListFor(x=>x.MembershipId, (List<SelectListItem>)ViewBag.Memberships, new { @class = "form-control" })
              </div>
       <div>
           <label for="card_number">PhoneNumber</label>
           <input type="text" asp-for="PhoneNumber" value="@ViewBag.User.PhoneNumber" required>
       </div>
       <br/>
       <button type="submit" class="btn btn-outline-primary" > <i class="fa fa-credit-card"> Pay With Card</i> </button>
   </form>
   
</div>
</body>
</html>
