@using Entity.Concrete
@model List<About>

@{
    ViewBag.Title = "title";
    Layout = "_UserLayout";
}

<!DOCTYPE html>
<html lang="zxx">
<body>
<section class="main-content-w3layouts-agileits">
		<div class="container">
			<h3 class="tittle">About</h3>
			<div class="row inner-sec">
				<!--left-->
				<div class="col-lg-8 left-blog-info-w3layouts-agileits text-left">
					<div class="blog-grid-top">

						<div class="blog_info_left_grid">
							<a href="single.html">
								<img src="~/BlogTema/writerTemplate/assets/images/YunusBlogLogo2.png" style="width: 700px; height: auto;" class="img-fluid" alt="">
							</a>
						</div>
						<h3>
							About Us & Our Vision & Our Mission
						</h3>
						@foreach (var item in Model)
						{
							<p>@item.Details1</p>
						}
						<a href="/Blog/Index" class="btn btn-secondary read-m">Go Back</a>
					</div>
					
				</div>
				<!--//left-->
				<!--right-->
				<aside class="col-lg-4 agileits-w3ls-right-blog-con text-right">
					<div class="right-blog-info text-left">
						<div class="tech-btm">
                            <img src="~/BlogTema/images/banner1.jpg" class="img-fluid" alt="">
                            </div>
						<h4>Sign up to our newsletter</h4>
						@await Html.PartialAsync("~/Views/NewsLetter/SubscribeEmail.cshtml") 
						@await Html.PartialAsync("~/Views/About/SosialMediaAbout.cshtml")


						<div class="tech-btm">
							@await Component.InvokeAsync("BlogLast3")
						</div>
					</div>

				</aside>
				<!--//right-->
			</div>
		</div>
	</section>

</body>

</html>
