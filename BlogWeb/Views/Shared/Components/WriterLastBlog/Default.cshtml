@using Entity.Concrete
@model List<Blog>


<div class="tech-btm">
    <h4>The author's other blog posts</h4>
    <div class="progress">
        <div class="progress-bar progress-bar-striped bg-danger" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0"
             aria-valuemax="100"></div>
    </div>
@foreach (var item in Model)
{
    <div class="blog-grids row mb-3">
        <div class="col-md-5 blog-grid-left">
            <a href="/Blog/Details/@item.Id">
                <img src="@item.ImageUrl" class="img-fluid" alt="">
            </a>
        </div>
        <div class="col-md-7 blog-grid-right">

            <h5>
                <a href="/Blog/Details/@item.Id">@item.Title</a>
            </h5>
            <div class="sub-meta">
                <span>
                    <i class="far fa-clock"></i> @(((DateTime)item.CreatedAt).ToString("dd-MMM-yyyy"))</span>
            </div>
        </div>

    </div>
    
}
   
</div>