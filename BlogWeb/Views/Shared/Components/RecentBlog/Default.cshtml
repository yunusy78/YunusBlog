@model List<Entity.Concrete.Blog>


@foreach (var item in Model)
{
    <div class="single-gd tech-btm">
        <h4>Recent Post</h4>
        <div class="progress">
            <div class="progress-bar progress-bar-striped bg-success" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0"
                 aria-valuemax="100"></div>
        </div>
        
        <div class="blog-grids">
            <div class="blog-grid-left">
                <a href="/Blog/Details/@item.Id">
                    <img src="@item.ImageUrl" class="img-fluid" alt="">
                </a>
            </div>
            <div class="blog-grid-right">

                <h5>
                    <a href="/Blog/Details/@item.Id">@item.Title</a>
                </h5>
            </div>
            <div class="clearfix">
									
            </div>
        </div>
    </div>
}
