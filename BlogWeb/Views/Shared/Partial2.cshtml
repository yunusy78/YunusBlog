@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using Entity.Concrete
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@{
    var applicationUser = await UserManager.GetUserAsync(User);
}

<div class="col-md-4 top-forms text-center mt-lg-3 mt-md-1 mt-0">
    @if (SignInManager.IsSignedIn(User))
    {
        <span><a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @applicationUser.UserName!</a></span>
        <span class="mx-lg-4 mx-md-2  mx-1">
            <a asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Blog", new { area = "" })">
                <i class="fas fa-sign-out-alt"></i>Logout</a>
        </span>
    }
    else
    {
        <span class="mx-lg-4 mx-md-2  mx-1">
            <a asp-area="Identity" asp-page="/Account/Login"><i class="fas fa-lock"></i>Login</a>
        </span>
        <span>
            <a asp-area="Identity" asp-page="/Account/Register"><i class="far fa-user"></i> Register</a>
        </span>
    }
</div>