@model Entity.Concrete.Blog
@{
    ViewBag.Title = "UpdateBlog";
    Layout = "/Views/Writer/WriterLayout.cshtml";
}

<h1>Edit Blog</h1>
<div class="container">
    <form asp-controller="Blog" asp-action="UpdateBlog" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label for="title">Title:</label>
            <input type="text" id="title" name="Title" class="form-control" value="@Model.Title">
            <span asp-validation-for="Title" class="text-danger"></span>  
        </div>
        <div class="form-group">
            <input type="hidden" asp-for="@Model.WriterId" />
            </div>

        <div class="form-group">
            <label for="content">Content:</label>
            <textarea id="content" name="Content" class="form-control" rows="8" required>@Model.Content</textarea>
            <span asp-validation-for="Content" class="text-danger"></span>  
        </div>
        <div class="form-group">
            <input type="hidden" asp-for="@Model.ImageUrl" />
        </div>
        
        <div class="form-group">
            <label asp-for="ImageUrl" >Choose an Image</label>
            <div class="custom-file">
                <input type="file" id="uploadBox" name="file" class="custom-file-input" >
                <label class="custom-file-label" for="uploadBox">Select Image</label>
            </div>
            <span asp-validation-for="ImageUrl" class="text-danger"></span>
        </div>
        
        <div class="form-group">
            <label for="title">Published Date:</label>
            <input type="text" id="CreatedAt" name="CreatedAt" class="form-control" required maxlength="100" value="@Model.CreatedAt">
            <span asp-validation-for="CreatedAt" class="text-danger"></span>  
        </div>
        <div class="form-group">
            <label for="status">Status:</label>
            <select id="status" name="Status" class="form-control">
                <option value="true">True</option>
                <option value="false">False</option>
            </select>
        </div>
        
        <div class="form-group">
            <label for="categoryId">Category:</label>
            @Html.DropDownListFor(x=>x.CategoryId, (List<SelectListItem>)ViewBag.Categories, new { @class = "form-control" })
            </div>
        <button type="submit" class="btn btn-primary"><i class="mdi mdi-pencil"></i> Update Blog</button>
        <button class="btn btn-light"><i class="mdi mdi-close"></i> Cancel</button>
    </form>
</div>
