
@{
    ViewBag.Title = "title";
    Layout = "_AdminLayout";
}

<!DOCTYPE html>
<html>



<body>

<div class="wrapper wrapper-content animated fadeInRight">
@await Component.InvokeAsync("Statistic1")

<div class="row">
    @await Component.InvokeAsync("Statistic2")
    <div class="col-lg-2">
        <div class="widget style1 navy-bg">
            <div class="row vertical-align">
                <div class="col-3">
                    <i class="fa fa-user fa-3x"></i>
                </div>
                <div class="col-9 text-right">
                    <h2 class="font-bold">@ViewBag.Users</h2>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-2">
        <div class="widget style1 navy-bg">
            <div class="row vertical-align">
                <div class="col-3">
                    <i class="fa fa-thumbs-up fa-3x"></i>
                </div>
                <div class="col-9 text-right">
                    <h2 class="font-bold">@ViewBag.Likes</h2>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-2">
        <div class="widget style1 navy-bg">
            <div class="row vertical-align">
                <div class="col-3">
                    <i class="fa fa-comment fa-3x"></i>

                </div>
                <div class="col-9 text-right">
                    <h2 class="font-bold">@ViewBag.Comments</h2>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-2">
        <div class="widget style1 lazur-bg">
            <div class="row vertical-align">
                <div class="col-3">
                    <i class="fa fa-pencil fa-3x"></i>
                </div>
                <div class="col-9 text-right">
                    <h2 class="font-bold">@ViewBag.Writers</h2>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-2">
        <div class="widget style1 lazur-bg">
            <div class="row vertical-align">
                <div class="col-3">
                    <i class="fa fa-folder fa-3x"></i>
                </div>
                <div class="col-9 text-right">
                    <h2 class="font-bold">@ViewBag.Categories</h2>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-2">
        <div class="widget style1 yellow-bg">
            <div class="row vertical-align">
                <div class="col-3">
                    <i class="fa fa-desktop fa-3x"></i>
                </div>
                <div class="col-9 text-right">
                    <h2 class="font-bold">@ViewBag.Posts</h2>
                </div>
            </div>
        </div>
    </div>
</div>
@await Component.InvokeAsync("Statistic4")
<div class="row m-t-lg">
    <div class="col-lg-6">
        <div class="ibox ">

            <div class="ibox-content">

                <div>
                    <div class="chat-activity-list">
                        
                    </div>
                </div>
                
            </div>
        </div>
    </div>
    <div class="col-lg-6">
        <div>
            <table class="table">
                <tbody>
                <tr>
                    <td>
                        <button type="button" class="btn btn-danger m-r-sm">@ViewBag.Messages</button>
                        Total messages
                    </td>
                    <td>
                        <button type="button" class="btn btn-primary m-r-sm">@ViewBag.Posts</button>
                        Blogs
                    </td>
                    <td>
                        <button type="button" class="btn btn-info m-r-sm">@ViewBag.Comments</button>
                        Comments
                    </td>
                </tr>
                <tr>
                    <td>
                        <button type="button" class="btn btn-info m-r-sm">@ViewBag.Categories</button>
                        Categories
                    </td>
                    <td>
                        <button type="button" class="btn btn-success m-r-sm">@ViewBag.Likes</button>
                        Likes
                    </td>
                    <td>
                        <button type="button" class="btn btn-danger m-r-sm">@ViewBag.Notifications</button>
                        Notifications
                    </td>
                </tr>
                <tr>
                    <td>
                        <button type="button" class="btn btn-warning m-r-sm">@ViewBag.Writers</button>
                        Writers
                    </td>
                    <td>
                        <button type="button" class="btn btn-default m-r-sm">@ViewBag.Users</button>
                        Users
                    </td>
                    <td>
                        <button type="button" class="btn btn-warning m-r-sm">@ViewBag.Newsletters</button>
                        Newsletters
                    </td>
                </tr>
                </tbody>
            </table>
        </div>
        <div>
            
        </div>
    </div>
</div>

</div>


</body>

</html>

