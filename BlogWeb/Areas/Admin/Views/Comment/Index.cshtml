@using Entity.Concrete;
@model List<Comment>

@{
    ViewBag.Title = "Index";
    Layout = "_AdminLayout";
}


<!DOCTYPE html>
<html>
<body>
<div class="wrapper wrapper-content animated fadeInRight">
<div class="row">
    <div class="col-lg-12">
                    <div class="ibox ">
                        <div class="ibox-title">
                            <h5>Comments</h5>
                        </div>
                        <div class="ibox-content">

                            <table class="table table-hover">
                                <thead>
                                <tr>
                                    <th>#</th>
                                    <th>UserName</th>
                                    <th>Title</th>
                                    <th>Content</th>
                                    <th>Blog</th>
                                    <th>Rating Score</th>
                                    <th>CreatedAt</th>
                                    <th>Delete</th>
                                    <th>Edit</th>
                                </tr>
                                </thead>
                                <tbody>
                                @foreach( var item in Model)
                                {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td>@item.UserName</td>
                                        <td>@item.Title</td>
                                        <td>@item.Content</td>
                                        <td>@item.Blog.Title</td>
                                        @if (item.BlogRating > 3)
                                        {
                                            <td class="text-navy"> <i class="fa fa-level-up"></i>@item.BlogRating</td>
                                        }
                                        else
                                        {
                                            <td class="text-warning"> <i class="fa fa-level-down"></i>@item.BlogRating </td>
                                        }
                                        <td> @(((DateTime)item.CreatedAt).ToString("dd-MMM-yyyy"))</td>
                                       <td>
                                           <a href="/Admin/Comment/Delete/@item.Id" class="btn btn-outline-danger"
                                              onclick="return confirm('Are you sure you want to delete this comment?')"><i class="fa fa-trash"></i> Delete</a>
                                       </td>
                                        <td><a href="/Admin/Comment/Edit/@item.Id" class="btn btn-outline-warning"><i class="fa fa-edit"></i> Edit</a></td>
                                    </tr>
                                }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
</div>
</body>

</html>

