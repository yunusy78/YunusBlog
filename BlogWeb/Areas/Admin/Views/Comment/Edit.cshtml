@model Entity.Concrete.Comment

@{
    ViewBag.Title = "title";
    Layout = "_AdminLayout";
}

<h1>Edit Comment</h1>
<div class="container">
    <form asp-controller="Comment" asp-action="Edit" method="post">
        <div class="form-group">
            <label for="title">UserName:</label>
            <input type="text" id="title" name="UserName" class="form-control" value="@Model.UserName">
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="title">Title:</label>
            <input type="text" id="title" name="Title" class="form-control" value="@Model.Title">
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="hidden" name="BlogId" value="@Model.BlogId"/>
        </div>
        <div class="form-group">
            <label for="content">Content:</label>
            <textarea id="content" name="Content" class="form-control" rows="8" required>@Model.Content</textarea>
            <span asp-validation-for="Content" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="CreatedAt">Published Date:</label>
            <input type="text" id="CreatedAt" name="CreatedAt" class="form-control" required maxlength="100" value="@Model.CreatedAt">
            <span asp-validation-for="CreatedAt" class="text-danger"></span>
        </div>
        <div class="form-group">
                    <label for="BlogRating">BlogRating:</label>
                    <input type="text" id="BlogRating" name="BlogRating" class="form-control" value="@Model.BlogRating">
                    <span asp-validation-for="BlogRating" class="text-danger"></span>
                    </div>
        <div class="form-group">
            <label for="status">Status:</label>
            <select id="status" name="Status" class="form-control">
                <option value="true">True</option>
                <option value="false">False</option>
            </select>
        </div>

        <button type="submit" class="btn btn-primary">Update Comment</button>
    </form>
</div>






