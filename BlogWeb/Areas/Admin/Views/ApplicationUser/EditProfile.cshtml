@model Entity.Concrete.ApplicationUser

@{
    ViewBag.Title = "title";
    Layout = "_AdminLayout";
}


<!DOCTYPE html>
<html>
<head>
    <title>Edit Profile</title>
    <style>
        .custom-form {
        	border: 1px solid #ccc;
        	padding: 20px;
        	border-radius: 10px;
        	margin-top: 50px;
        }
    </style>
</head>
<body>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 custom-form">
            <h1 class="text-center">Edit Profile</h1>
            <form asp-controller="ApplicationUser" asp-action="EditProfile" method="post" enctype="multipart/form-data">
                <input type="hidden" name="Id" value="@Model.Id" />
                <div class="form-group">
                    <label for="title">FirstName:</label>
                    <input type="text" id="title" name="FirstName" class="form-control" value="@Model.FirstName" placeholder="Enter role name">
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="title">LastName:</label>
                    <input type="text" id="title" name="LastName" class="form-control" value="@Model.LastName" placeholder="Enter role name">
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="title">Email:</label>
                    <input type="text" id="title" name="Email" class="form-control" value="@Model.Email" placeholder="Enter role name">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="title">UserName:</label>
                    <input type="text" id="title" name="UserName" class="form-control" value="@Model.UserName" placeholder="Enter role name">
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ImageUrl" >Choose an Image</label>
                    <div class="custom-file">
                        <input type="file" id="uploadBox" name="file" class="custom-file-input" >
                        <label class="custom-file-label" for="uploadBox">Select Image</label>
                    </div>
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div>
                
                <div class="text-center">
                    <button type="submit" class="btn btn-warning"><i class="fa fa-edit"></i> Update Profile</button>
                </div>
            </form>
        </div>
    </div>
</div>
</body>
</html>