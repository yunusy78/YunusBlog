



<div class="row">
    <div class="col-lg-3">
        <div class="widget style1 navy-bg">
            <div class="row">
                <div class="col-4 text-center" >
                    <i class="fa fa-pencil fa-5x"></i>
                </div>
                <div class="col-8 text-right">
                    <span> Total Number of Blog </span>
                    <h2 class="font-bold">@ViewBag.TotalBlog </h2>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-3">
        <div class="widget style1 navy-bg">
            <div class="row">
                <div class="col-4">
                    <i class="fa fa-cloud fa-5x"></i>
                </div>
                <div class="col-8 text-right">
                    <span> Oslo </span>
                    <h2 class="font-bold">@ViewBag.Temperature°C</h2>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-3">
        <div class="widget style1 lazur-bg">
            <div class="row">
                <div class="col-4">
                    <i class="fa fa-envelope-o fa-5x"></i>
                </div>
                <div class="col-8 text-right">
                    <span> Total messages </span>
                    <h2 class="font-bold">@ViewBag.TotalMessage</h2>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-3">
        <div class="widget style1 yellow-bg">
            <div class="row">
                <div class="col-4">
                    <i class="fa fa-comment fa-5x"></i>
                </div>
                <div class="col-8 text-right">
                    <span> Total Comments </span>
                    <h2 class="font-bold"> @ViewBag.Comments </h2>
                </div>
            </div>
        </div>
    </div>
</div>