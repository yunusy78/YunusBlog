@using Microsoft.AspNetCore.Mvc.TagHelpers;
@model List<BlogWeb.Areas.Admin.Models.RoleAssignViewModel>

@{
    ViewBag.Title = "title";
    Layout = "_AdminLayout";
}


<title>Role Assignment</title>
<style>
        .custom-form {
        	border: 1px solid #ccc;
        	padding: 20px;
        	border-radius: 10px;
        	margin-top: 50px;
        	}
        	 .large-checkbox {
                    width: 17px;
                    height: 17px;
                }
        
    </style>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 custom-form">
            <form method="post">
                <div class="row">
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        <div class="col-md-4 mb-3">
                            <div class="form-check">
                                <input type="hidden" asp-for="@Model[i].RoleId"/>
                                <input type="hidden" asp-for="@Model[i].Name"/>
                                <input type="checkbox" class="form-check-input large-checkbox" asp-for="@Model[i].Exist"/>
                                <label class="form-check-label" for="@Model[i].Exist"><strong>&nbsp;@Model[i].Name </strong></label>
                            </div>
                        </div>
                    }
                </div>

                <div class="mt-3">
                    <button class="btn btn-outline-primary"> <i class="fa fa-save"></i> Save Assignments</button>
                    <a href="/Admin/Role/UserRoleList" class="btn btn-outline-secondary ml-3"><i class="fa fa-arrow-left"></i> Back to User Role List</a>
                </div>
            </form>
        </div>
    </div>
</div>
